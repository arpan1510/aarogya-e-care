<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pleaseupdate">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/updateapp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/loggooo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerInParent="false"
            android:src="@drawable/newlogotrans" />

        <TextView
            android:id="@+id/please"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loggooo"
            android:fontFamily="@font/roboto_black"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Please Update \n Aarogya E Care App"
            android:textColor="#000"
            android:textSize="23dp"
            app:layout_constraintTop_toBottomOf="@+id/loggooo" />

        <TextView
            android:id="@+id/textcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/please"
            android:fontFamily="@font/questrial_regular"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Aarogya E Care App is updated to enhance your experience. Please install the latest version to get your records back."
            android:textColor="#000"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/updateapp"
            app:layout_constraintTop_toBottomOf="@+id/please" />
    </LinearLayout>


    <TextView
        android:id="@+id/updateapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_margin="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/linearbtn"
        android:fontFamily="@font/roboto_black"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="12dp"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>