<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:background="@drawable/input3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:background="@drawable/input4">

            <ImageView
                android:id="@+id/cardfiletypeimg"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_picture_as_pdf_black_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Document.pdf"
                android:gravity="center|left"
                android:id="@+id/cardfilename"
                android:textSize="18sp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textColor="#000"
                />

            <ImageView
                android:id="@+id/carddropdown"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_drop_down_black_24dp" />

        </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginRight="18dp"
                android:layout_marginLeft="18dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/carddate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="2018-06-01 04:25:17"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:maxLength="10"
                    android:fontFamily="@font/ubuntu_bold"/>

                <TextView
                    android:id="@+id/cardrecordtype"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="REPORT"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="13sp"

                    android:layout_marginLeft="75dp"
                    android:fontFamily="@font/ubuntu_bold"/>

                <TextView
                    android:id="@+id/cardsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="25MB"
                    android:gravity="center_vertical"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:fontFamily="@font/ubuntu_bold"/>



            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>