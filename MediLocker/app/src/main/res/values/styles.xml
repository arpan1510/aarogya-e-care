<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="textAppearanceLargePopupMenu">@style/AppTheme.TextAppearance.Popup</item>
        <item name="alertDialogTheme">@style/alert</item>
    </style>
    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimaryDark</item>
    </style>
    <style name="alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@android:color/black</item>
    </style>
    <style name="Font" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">#4285f4</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Widget.TextView.SpinnerItem." parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
            <item name="android:editTextColor">@android:color/black</item>
            <item name="hintTextColor">@android:color/darker_gray</item>
    </style>
    <style name="AppTheme.TextAppearance.Popup" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
